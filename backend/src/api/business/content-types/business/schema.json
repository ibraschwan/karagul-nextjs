{
  "kind": "collectionType",
  "collectionName": "businesses",
  "info": {
    "singularName": "business",
    "pluralName": "businesses",
    "displayName": "İşletme",
    "description": "Rehberdeki işletme kayıtları"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "maxLength": 255,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "description": {
      "type": "richtext",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "email": {
      "type": "email"
    },
    "phone": {
      "type": "string",
      "maxLength": 255
    },
    "website": {
      "type": "string",
      "maxLength": 255
    },
    "address": {
      "type": "text"
    },
    "city": {
      "type": "string",
      "maxLength": 255
    },
    "district": {
      "type": "string",
      "maxLength": 255
    },
    "postalCode": {
      "type": "string",
      "maxLength": 255
    },
    "latitude": {
      "type": "decimal",
      "min": -90,
      "max": 90
    },
    "longitude": {
      "type": "decimal",
      "min": -180,
      "max": 180
    },
    "operatingHours": {
      "type": "json",
      "required": false
    },
    "socialMedia": {
      "type": "json",
      "required": false
    },
    "status": {
      "type": "enumeration",
      "enum": ["pending", "approved", "rejected"],
      "default": "pending",
      "required": true
    },
    "isFeatured": {
      "type": "boolean",
      "default": false
    },
    "featuredUntil": {
      "type": "datetime"
    },
    "views": {
      "type": "integer",
      "default": 0,
      "min": 0
    },
    "metaTitle": {
      "type": "string",
      "maxLength": 255,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "metaDescription": {
      "type": "text",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "aiKeywords": {
      "type": "json",
      "required": false
    },
    "aiFaq": {
      "type": "json",
      "required": false
    },
    "owner": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "businesses"
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "inversedBy": "businesses"
    },
    "images": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::business-image.business-image",
      "mappedBy": "business"
    },
    "contactMessages": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::contact-message.contact-message",
      "mappedBy": "business"
    }
  }
}