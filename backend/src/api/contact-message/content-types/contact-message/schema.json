{
  "kind": "collectionType",
  "collectionName": "contact_messages",
  "info": {
    "singularName": "contact-message",
    "pluralName": "contact-messages",
    "displayName": "İletişim Mesajı",
    "description": "İşletmelere gönderilen iletişim mesajları"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "email": {
      "type": "email",
      "required": true
    },
    "phone": {
      "type": "string",
      "maxLength": 255
    },
    "message": {
      "type": "text",
      "required": true
    },
    "ipAddress": {
      "type": "string",
      "maxLength": 255
    },
    "isRead": {
      "type": "boolean",
      "default": false
    },
    "business": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::business.business",
      "inversedBy": "contactMessages"
    }
  }
}